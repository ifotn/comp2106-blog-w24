<h1>Register</h1>
<h4 class="alert alert-secondary">Password: Min 8 chars, 1 digit, 1 upper, 1 lower</h4>
<form method="post">
    <fieldset>
        <label for="username">Username: *</label>
        <input name="username" id="username" required />
    </fieldset>
    <fieldset>
        <label for="password">Password: *</label>
        <input name="password" id="password" required type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" />
        <img src="/images/show.png" alt="Show/Hide" id="imgShowHide" onclick="showHide();" />    
    </fieldset> 
    <fieldset>
        <label for="confirm">Confirm: *</label>
        <input name="confirm" id="confirm" required type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" onkeyup="return checkPassword();" />
        <span id="pwMsg"></span>
    </fieldset>
    <button class="btn btn-info offset-4" onclick="return checkPassword();">
        <i class="bi bi-person-fill-add"></i> Register
    </button>
</form>